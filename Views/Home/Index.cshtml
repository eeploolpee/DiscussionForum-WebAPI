@model IEnumerable<DiscussionForum.Post>
@{
    int count = 0;
}
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">
        Welcome @Session["username"]
    </p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Hello </a></p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("View", "View", "Post", new { id = item.Id }, null)
            </td>
        </tr>
    }
    @if (count == 0)
    {
        <tr>
            <td>
                No post found. @Html.ActionLink("Click here ", "Create", "Post", null, null) to create post.
            </td>
            <td>
            </td>
        </tr>
    }

</table>